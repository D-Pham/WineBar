                android:layout_height="wrap_content"
                android:id="@+id/merlotText"
                android:textSize="40dp"
                android:layout_alignBaseline="@+id/merlot"
                android:layout_toRightOf="@+id/merlot"
                android:textAlignment="center" />

            <TextView
                android:text="Quantity: "
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/Quantity"
                android:textSize="25dp"
                android:layout_alignBaseline="@+id/merlot"
                android:layout_toRightOf="@+id/merlotText" />


            <EditText
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/merlotQuantity"
                android:layout_alignBaseline="@+id/Quantity"
                android:layout_toRightOf="@+id/Quantity"/>

        </TableRow>

