<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context=".Confirmation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Order Summary!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cattitle"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:textColorLink="?android:attr/textColorLink"
            android:textColor="@color/colorAccent"
            android:textSize="45dp" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:id="@+id/textView12"
            android:background="@color/common_google_signin_btn_text_dark_focused"
            android:layout_marginBottom="10dp"
            android:layout_height="2px" />

        <TextView
            android:text="Your Order Summary"
            android:layout_width="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_height="wrap_content">

        </TextView>

        <ListView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="27dp"
            android:layout_alignParentStart="true"
            android:id="@+id/listView" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:text="Shipping Information:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView15"
                    android:layout_marginTop="38dp"
                    android:layout_marginBottom="5dp"
                    android:textStyle="normal|bold"></TextView>

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="12dp"
                    android:layout_alignStart="@+id/textView15"
                    android:id="@+id/customerStreetAddr" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/customerCity"
                    android:layout_below="@+id/customerStreetAddr"
                    android:layout_alignStart="@+id/customerStreetAddr"
                    android:layout_marginTop="12dp" />
                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/customerState"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/customerZip"
                    android:layout_marginTop="12dp" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:background="@color/common_google_signin_btn_text_dark_focused"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="12dp"
                    android:layout_height="2px" />

                <TextView
                    android:text="Card Information:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                    android:layout_marginBottom="27dp"
                    android:layout_marginTop="12dp"
                    android:layout_above="@+id/textView25"
                    android:layout_centerHorizontal="true"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="Card ending in:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView25"
                    android:layout_above="@+id/place_order_button"
                    android:layout_centerHorizontal="true" />


                <TextView
                    android:text="XXXX-XXXX-XXXX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cardLastDigits"
                    android:layout_below="@+id/textView16"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp" />


                <Button
                    android:text="Place My Order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginBottom="35dp"
                    android:id="@+id/place_order_button"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true" />
            </LinearLayout>

        </ScrollView>

    </LinearLayout>


